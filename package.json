{
  "name": "xlxz-wiki",
  "private": true,
  "version": "4.1.0",
  "description": "游戏策划案专用 Wiki 文档系统 — Markdown 词条引用 + 悬停定义卡片",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "server:dev": "bun run --watch server/index.ts",
    "server:start": "bun run server/index.ts",
    "embed": "bun run scripts/generate-embedded.ts",
    "compile": "bun build --compile --target=bun-windows-x64 --outfile=xlxz-wiki.exe server/index.ts",
    "release": "pnpm build && pnpm embed && pnpm compile",
    "release:go": "bun run scripts/release-go.ts",
    "test": "bun test"
  },
  "dependencies": {
    "@milkdown/kit": "^7.18.0",
    "@milkdown/vue": "^7.18.0",
    "chokidar": "^4.0.3",
    "gray-matter": "^4.0.3",
    "hono": "^4.11.8",
    "markdown-it": "^14.1.0",
    "markdown-it-task-lists": "^2.1.1",
    "mermaid": "^11.12.2",
    "pinia": "^3.0.4",
    "pinyin-pro": "^3.28.0",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.11",
    "@vitejs/plugin-vue": "^5.2.4",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  }
}
